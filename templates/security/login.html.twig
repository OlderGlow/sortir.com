{% extends 'base.html.twig' %}

{% block title %}Connectez-vous!{% endblock %}

{% block body %}

<form method="post">
    <div class="container px-4 py-5 mx-auto">
            <div class="d-flex flex-lg-row flex-column-reverse mx-auto">
                <div class="card card1 mx-auto">
                    <div class="row justify-content-center my-auto">
                        <div class="col-md-8 col-6 my-5">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <h3 class="mb-5 text-center heading">Connexion</h3>
                            <div class="form-group"> <label class="form-control-label text-muted">Pseudo</label> <input type="text" id="_pseudo" name="_pseudo" placeholder="Pseudo" class="form-control" value="{{ last_username }}"> </div>
                            <div class="form-group"> <label class="form-control-label text-muted">Mot de passe</label> <input type="password" id="_password" name="_password" placeholder="Mot de passe" class="form-control"> </div>
                            <div class="row justify-content-center my-3 px-3 mb-3"> <button class="btn-block btn-color">Connectez-vous</button> </div>
                            <div class="custom-control custom-switch mt-3" style="margin-top: 3rem;">
                                <input type="checkbox" class="custom-control-input mt-3" id="customSwitch1" checked name="_remember_me">
                                <label class="custom-control-label text-muted" for="customSwitch1">Se souvenir de moi</label>
                            </div>
                        </div>
                    </div>
                    <div class="bottom text-center mb-5">
                        <a href="#" class="sm-text mx-auto mb-3"><button class="btn btn-white ml-2">Mot de passe oubli√© ?</button></a>
                    </div>
                </div>

            </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
    </div>
</form>
{% endblock %}
