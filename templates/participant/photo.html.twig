{% extends 'base.html.twig' %}

{% block title %}Ins√©rez votre photo de profil !{% endblock %}

{% block body %}
    <div class="container">
        <div class="py-5" style="height: 500px;">
            <div class="mx-auto" style="width: 500px;">
                <div class="center">

                    {% if app.user.photo is defined %}
                        {% if app.user.photo != null %}
                            <h2>Photo actuelle :</h2>
                            <br/>
                            <img src="{{ asset('uploads/photoParticipants') }}/{{ app.user.photo }}"
                                 alt="Photo de profil" class="imagecercle2"/>
                        {% endif %}
                    {% endif %}
                    <br/>
                    {{ form_start(form) }}

                    <div class="col-lg-12 col-md-12 inline">
                        <div class="form-group">
                            {{ form_widget(form) }}

                            <div class="mt-4 col-lg-12 col-md-6">
                                <div class="row">
                                    <p class="form-group">
                                        <button class="btn btn-success">Valider</button>
                                    </p>
                                    <a href="{{ path('participant.my.profil') }}">
                                        <button type="button" class="btn btn-primary ml-3"> Retour</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    {{ form_end(form) }}


                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).on('change', '.custom-file-input', function () {
            let fileName = $(this).val().replace(/\\/g, '/').replace(/.*\//, '');
            $(this).parent('.custom-file').find('.custom-file-label').text(fileName);
        });
    </script>
{% endblock %}
