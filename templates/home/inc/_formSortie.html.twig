        <div class="mx-auto mt-5" style="margin-top: 3rem;">
            <div class="row">
                <div class="ml-3" style="margin-left: 1rem;">{{ form_row(form.enregistree) }}
                </div>
                {{ form_row(form.publier) }}
                <a href="{{ path('home') }}" class="btn btn-danger" style="height: 38px;">Annuler</a>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>