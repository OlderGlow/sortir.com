{% extends 'base.html.twig' %}
{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <div class="col-md-3">
                    <p>Nom de la sortie :</p>
                    <p>Date de début : </p>
                    <p>Date de fin d'inscription : </p>
                    <p>Nombre d'inscriptions max : </p>
                    <p>Durée : </p>
                    <p>Description : </p>
                </div>
                <div class="col-md-3">
                    <p>{{ sortieId.nom }}</p>
                    <p>{{ sortieId.datedebut | date('d/m/yy') }}</p>
                    <p>{{ sortieId.datecloture | date('d/m/yy') }}</p>
                    <p>{{ sortieId.nbinscriptionsmax }}</p>
                    <p>{{ sortieId.duree }}</p>
                    <p>{{ sortieId.descriptioninfos }}</p>
                </div>

            </div>
            <div class="col-md-6 text-center">
                <p>{{ sortieId.campus.nomCampus }}</p>
                <p>{{ sortieId.lieu }}</p>
                <p>{{ sortieId.lieu.ville.nomVille }}</p>
                <p>{{ sortieId.lieu.rue }}</p>
                <p>{{ sortieId.lieu.ville.codePostal }}</p>
                <p>{{ sortieId.lieu.latitude }}</p>
                <p>{{ sortieId.lieu.longitude }}</p>
            </div>
            {% if form is defined %}
            {{ form_widget(form.descriptioninfos) }}
                <button type="submit" name="ok">Annulé</button>
            {% endif %}

        </div>
    </div>

{% endblock %}